.styletrainer-trainingitemgriditem {
    width: 100%;
    height: 100%;
}

.styletrainer-trainingitemgriditem__deletebutton {
    position: absolute;
    top: var(--appui-spacing-200);
    right: var(--appui-spacing-200);
    display: none;
}

.styletrainer-trainingitemgriditem__previewimage {
    width: 100%;
    height: 100%;
    flex-grow: 1;
    flex-shrink: 1;
    border-radius: 6px;
}

#PreviewImage{
    -unity-background-scale-mode: scale-to-fit;
}

.appui-grid-view__item.is-selected #PreviewImage {
    border-width: var(--appui-border-width-md);
    border-color: var(--appui-accent-100);
}

*:hover > .styletrainer-trainingitemgriditem__deletebutton {
    display: flex;
}

.styletrainer-trainingsetview-gridview-disable .styletrainer-trainingitemgriditem__deletebutton {
    display: none;
}

.is-selected .delete-button-webgl {
    display: flex;
}

.styletrainer-trainingitemgriditem__plus-button #GridItem{
    border-color: rgba(0,0,0,0);
}

.styletrainer-trainingitemgriditem__plus-button PreviewImage Button{
    border-width: 0;
}

.styletrainer-trainingitemgriditem__plus-button__container{
    width: 100%;
    height: 100%;
    background-color: var(--unity-theme-background-color-90);
}

.styletrainer-trainingitemgriditem__plus-button__container:hover{
    background-color: var(--unity-theme-background-color-89);
}

.styletrainer-trainingitemgriditem__plus-button__container Icon{
    background-color: var(--appui-alias-actions-background-color-default);
    border-radius: var(--appui-alias-control-border-radius);
}