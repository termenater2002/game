.muse-assetslist__root {
    position: absolute;
    right: 0;
    left: 0;
    height: 100%;
}

.muse-assetslist {
    position: absolute;
    width: 538px;
    min-width: 288px;
    max-width: 49%;
    padding: 0 var(--appui-spacing-300);
    --background-color: var(--appui-backgrounds-200);
    bottom: 0;
    top: 0;
    right: 0;
    margin-top: var(--appui-sizing-10);
}

.muse-assetslist__refine{
    bottom: var(--appui-spacing-125);
    top: var(--appui-spacing-125);
    right: var(--appui-spacing-125);
    background-color: var(--appui-backgrounds-200);
    border-radius: var(--appui-alias-control-border-radius);
    margin-top: initial;
}

.muse-assetslist__titlebar {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: var(--appui-sizing-200) 0;
    flex-shrink: 0;
}

.muse-assetslist__title {
    color: var(--appui-foregrounds-200);
    font-size: var(--appui-font-sizes-100);
    -unity-font-style: bold;
}

.muse-assetslist__export-button {
    position: absolute;
    right: 0;
}

.muse-assetslist__bookmark-filter-button {
    margin-right: var(--appui-alias-control-gap-md);
}

.muse-assetslist__body {
    flex-grow: 1;
    flex-shrink: 1;
}

.muse-assetslist__gridview {
    flex-grow: 1;
    flex-shrink: 1;
}

.muse-assetslist__dragbar {
    position: absolute;
    width: 24px;
    top: var(--appui-sizing-100);
    bottom: var(--appui-sizing-100);
    margin-left: -22px;
    background-color: rgba(0, 0, 0, 0.001);
    justify-content: center;
    align-items: stretch;
    flex-direction: row;
}

.muse-assetslist__dragbar-content {
    width: 2px;
}

.muse-assetslist__dragbar:hover > .muse-assetslist__dragbar-content {
    background-color: var(--appui-backgrounds-300);
}

.muse-assetslist__content-container {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.muse-asset-image > PreviewImage,
.muse-asset-image > PreviewPbrArtifact {
    border-radius: var(--appui-alias-control-border-radius);
    overflow: hidden;
    position: relative;
}

.appui-grid-view__item > .muse-asset-image > PreviewImage,
.appui-grid-view__item > .muse-asset-image > PreviewPbrArtifact {
    border-width: 2px;
    border-color: rgba(0,0,0,0);
}

.muse-asset-image.is-selected > PreviewImage,
.appui-grid-view__item.is-selected > .muse-asset-image > PreviewImage,
.muse-asset-image.is-selected > PreviewPbrArtifact,
.appui-grid-view__item.is-selected > .muse-asset-image > PreviewPbrArtifact {
    border-width: 2px;
    border-color: var(--appui-accent-100);
}

.muse-assetslist__header {
    flex-direction: row;
    margin-bottom: var(--appui-alias-control-gap-md);
}

.muse-assetslist__footer {
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    flex-shrink: 0;
    border-top-color: var(--appui-backgrounds-300);
    border-top-width: var(--appui-sizing-10);
    margin-right: var(--appui-sizing-275);
    margin-left: var(--appui-sizing-50);
    margin-top:  var(--appui-alias-control-gap-md);
    padding: 0 var(--appui-sizing-125);
}

.muse-assetslist__thumbnail-slider {
    width: 50px;
}

.muse-assetslist__thumbnail-slider .appui-slider__inline-valuelabel {
    display: none;
}
.muse-assetslist__searchbar{
    flex-grow: 1;
    flex-shrink: 1;
}

.muse-assetslist__context-menu-anchor {
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 0;
}

.muse-asset-image__control-buttons-container {
    flex-direction: row-reverse;
    padding: var(--appui-spacing-50);
    display: flex;
    position: absolute;
    width: 100%;
    height: 100%;
}

.muse-asset-image__control-buttons-container .no-mouse {
    display: flex;
}
