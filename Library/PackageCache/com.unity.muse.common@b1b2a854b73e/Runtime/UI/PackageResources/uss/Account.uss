:root {
    --muse-subscription-dialog-dark: #3B0A2A;
    --muse-subscription-dialog-light: #EB417A;
    --muse-subscription-dialog-pressed: #9a2a50;
    --muse-subscription-dialog-border: #851F40;
    --muse-subscription-dialog-text-magenta: #FF85AB;
    --muse-subscription-callout-border: #E93D82;
    --muse-subscription-callout-warning: #CD9F14;
    --appui-icon-arrow-square-in-regular: url("project:/Packages/com.unity.muse.common/Runtime/UI/PackageResources/Images/arrow-square-in.png");
}

.appui {
    background-color: var(--appui-backgrounds-200);
}

.muse-subscription-dialog {
    height: 100%;
}

#muse-dialog-content-scrollview {
    height: 100%;
}

#muse-dialog-content {
    min-width: 200px;
    max-width: 800px;
    padding: var(--appui-spacing-600);
}

.appui-icon--muse-logo--regular {
    --unity-image: url("../Images/Muse Logo.png");
    --unity-image-tint-color: white;
}

.muse-subscription-modal #appui-modal__content,
.muse-subscription-modal #appui-modal {
    border-radius: var(--appui-sizing-700); /* Note: Needed to double Figma's to match design for unknown reason */
}

.muse-subscription-message Button.appui-dialog__primary-action,
.muse-subscription-message Button.appui-button--accent {
    padding: var(--appui-sizing-125) var(--appui-sizing-200);
    margin-right: var(--appui-spacing-200);
}

.muse-subscription-dialog Button.appui-dialog__cancel-action,
.account-dropdown-start-subscription {
    background-color: rgba(0,0,0,0);
    border-color: rgba(0,0,0,0);
    cursor: link;
}

.muse-subscription-dialog .hero-image {
    align-self: flex-start;
    max-width: 400px;
}

.muse-subscription-dialog .unity-image.appui-toggle__checkmark {
    align-self: center;
}

#muse-dialog-logo-container {
    padding-bottom: var(--appui-spacing-600);
}

.muse-subscription-dialog .muse-dialog-logo {
    height: 28px;
    width: 24px;
    align-self: flex-start;
}

.muse-subscription-dialog #muse-description-title {
    font-size: var(--appui-font-sizes-400);
    -unity-font-style: bold;
    padding-bottom: var(--appui-sizing-200);
}

.muse-subscription-dialog #muse-description-secondary {
    font-size: var(--appui-font-sizes-100);
}

.muse-subscription-message .muse-description-content-start {
    margin-top: var(--appui-static-spacing-150);
}

.muse-subscription-message .muse-description-content-end {
    margin-bottom: var(--appui-static-spacing-150);
}

.muse-subscription-dialog #muse-description-primary {
    font-size: var(--appui-font-sizes-400);
    -unity-font-style: bold;
    color: rgba(255, 255, 255, 0.82);
    min-height: 24px;
}

.muse-subscription-dialog #muse-description-text-primary {
    font-size: var(--appui-font-sizes-200);
    -unity-font-style: bold;
    color: rgba(255, 255, 255, 0.82);
    min-height: 24px;
}

.muse-subscription-dialog #muse-description-3 {
    font-size: var(--appui-font-sizes-100);
    color: rgba(255, 255, 255, 0.82);
    min-height: 24px;
}

.muse-subscription-dialog .appui-dialog__content {
    margin-top: 0;
    padding: var(--appui-spacing-600) var(--appui-spacing-600) 0 var(--appui-spacing-600);
    flex-shrink: 1;
}

.muse-subscription-dialog .muse-dialog-action-container {
    flex-direction: row;
    flex-wrap: wrap;
    padding-top: var(--appui-spacing-400);
}

#muse-dropdown-logo {
    min-height: 16px;
    max-height: 16px;
    min-width: 16px;
    max-width: 16px;
}

#muse-account-dropdown .appui-icon {
    width: var(--appui-sizing-300);
    height: var(--appui-sizing-300);
}

.dropdown-editor-window {
    border-width: var(--appui-border-width-sm);
    border-color: var(--appui-primary-400);
}

.muse-account-settings {
    padding: var(--appui-spacing-300);
    border-radius: var(--appui-alias-control-border-radius);
    border-width: var(--appui-border-width-sm);
    border-color: var(--appui-primary-400);
    flex-shrink: 0;
}

.dropdown-editor-window .muse-account-settings {
    border-width: 0;
    flex-shrink: 0;
}

.muse-account-settings-dropdown {
    min-width: 240px;
    max-width: 300px;
}

.muse-account-settings .row {
    justify-content: space-between;
    align-items: center;
}

.appui-divider.muse-account-divider {
    padding: var(--appui-spacing-150) 0;
}

UsageProgressText {
    flex-direction: row;
    align-items: center;
}

UsageProgressText #points {
    -unity-font-style: bold;
    margin-left: var(--appui-spacing-125);
    flex-grow: 1;
    flex-shrink: 0;
    -unity-text-align: middle-right;
}

UsageView .row {
    flex-wrap: nowrap;
}

UsageView UsageProgressBar {
    height: var(--appui-spacing-200);
    background-color: var(--unity-theme-background-color-9);
    /*
    border-width: 1px;
    border-color: var(--unity-theme-border-color-8);
     */
    border-radius: var(--appui-spacing-100);
    margin: var(--appui-spacing-100) 0;
}

.muse-account-organization-dropdown {
    margin-top: var(--appui-spacing-125);
    margin-bottom: var(--appui-spacing-125);
}

#muse-terms-of-service, #muse-privacy-policy, .muse-opt-in-group {
    flex-direction: row;
    align-items: flex-start;
}

.muse-checkbox-group Text, .muse-opt-in-group Text {
    margin-left: var(--appui-spacing-200);
}

.muse-subscription-dialog .muse-description-section {
    padding-bottom: var(--appui-spacing-600);
}

.muse-terms-of-service-section {
    padding-bottom: var(--appui-spacing-400);
}

.muse-trial-organization-dropdown {
    padding: var(--appui-spacing-100) var(--appui-spacing-400);
    height: auto;
    border-radius: var(--appui-spacing-100);
    border-width: 1px;
}

.muse-trial-organization-dropdown:hover {
}

.muse-dialog-secondary-action-container {
    flex-direction: row;
}

#muse-organization-dropdown #appui-picker__titlecontainer {
    flex-grow: 1;
}

.muse-account-label-not-entitled {
    -unity-font-style: italic;
}

.muse-account-label .show-status {
    flex-direction: row;
    justify-content: space-between;
    flex-grow: 1;
    flex-wrap: wrap;
}

.muse-account-label .status {
    opacity: 0.6;
    -unity-font-style: italic;
}

.muse-link-hover {
    cursor: link;
}

#muse-open-project-settings-container {
    align-items: flex-start;
    margin-top: var(--appui-spacing-200);
}

.account-dropdown-start-subscription .appui-button__titlecontainer {
    margin: 0;
    align-items: flex-start;
}

#muse-description-text-secondary {
    margin-bottom: var(--appui-spacing-600);
}

.muse-node-message-warning Text {
    color: var(--appui-destructive-300);
}

.muse-thirdparty-dialog #muse-dialog-description-group {
    margin-left: 0;
    justify-content: flex-start;
}
.muse-thirdparty-dialog .appui-dialog__buttongroup {
    margin-top: 12px;
}
.muse-thirdparty-dialog #muse-dialog-description-group #muse-partner-logo {
    min-width: initial;
    width: 64px;
    height: 64px;
    margin-bottom: 12px;
}
.muse-thirdparty-dialog Text {
    color: #EEEEEE;
    font-size: 13px;
}

.muse-dialog-section-title {
    -unity-font-style: bold;
}

SectionCard {
    border-radius: var(--appui-sizing-100);
    border-width: 1px;
    border-color: var(--appui-alias-actions-background-color-default);
    padding: var(--appui-spacing-300);
    margin-top: var(--appui-spacing-200);
}

.muse-dialog-card-title {
    -unity-font-style: bold;
    font-size: var(--appui-sizing-275);
    margin-bottom: var(--appui-sizing-50);
}

SectionCard .muse-dialog-card-description {
    font-size: var(--appui-font-sizes-75);
}

.subscription-callout-container {
    border-width: 1px;
    border-radius: var(--appui-sizing-100);
    padding: var(--appui-spacing-150);
    margin-bottom: var(--appui-spacing-400);
    background-color: var(--appui-backgrounds-100);
}

.subscription-callout-container Text {
    font-size: var(--appui-font-sizes-75);
    margin-bottom: var(--appui-spacing-100);
}

.subscription-callout-container .title-container {
    -unity-font-style: bold;
}

SessionStatusNotifications {
    flex-shrink: 0;
}

.notifications-area {
    padding: 0 var(--appui-spacing-300);
    flex-shrink: 0;
}

.notification-view {
    margin-top: var(--appui-spacing-200);
    flex-shrink: 0;
}

.notification-view .inline-style #appui-button__titlecontainer {
    margin-left: 0;
    font-size: var(--appui-font-sizes-75);
}

.notification-view .inline-style {
}

.notification-view.style-warning .subscription-callout-container {
    border-color: var(--muse-subscription-callout-border);
}

.notification-view.style-alert .subscription-callout-container {
    border-color: var(--muse-subscription-callout-warning);
}

.subscription-callout-container .title-container {
    flex-direction: row;
    margin-bottom: var(--appui-spacing-100);
}

.notification-view.style-alert #appui-dialog__icon {
    --unity-image-tint-color: var(--muse-subscription-callout-warning);
    margin-right: var(--appui-spacing-100);
}

Button.size-to-content {
    flex-shrink: 1;
    justify-content: flex-start;
}

Button.size-to-content #appui-button__titlecontainer {
    flex-grow: 0;
    flex-shrink: 1;
}

.button-row-container {
    flex-direction: row;
}

.notification-view .button-row-container {
    margin-top: var(--appui-spacing-100);
}

SubscriptionView MenuItem {
    padding: 0;
}

SubscriptionView .menu-items {
    padding-top: var(--appui-spacing-400);
}

.dropdown-subscription-type {
    -unity-font-style: bold;
    margin-bottom: var(--appui-spacing-200);
}

SubscriptionView ExternalLinkMenuItem {
    padding: var(--appui-spacing-50) 0;
    flex-shrink: 0;
}

SubscriptionView #subscribe-to-muse-menu-item {
    margin-top: var(--appui-spacing-100);
}

.appui-icon--arrow-square-in--regular {
    --unity-image: var(--appui-icon-arrow-square-in-regular);
}

SectionCard {
    flex-direction: row;
}

SectionCard .action-icon {
    align-self: center;
}

.hidden {
    display: none;
}

OrganizationSelection {
    height: auto;
    min-height: 20px;
}