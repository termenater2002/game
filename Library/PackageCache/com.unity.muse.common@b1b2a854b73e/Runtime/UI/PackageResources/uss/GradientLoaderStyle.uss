.genai-loader-gradient {
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    background-color: var(--appui-backgrounds-100);
}

.genai-loader-gradient .appui-circular-progress {
    width: var(--appui-sizing-1000);
    height: var(--appui-sizing-1000);
    max-width: 80%;
    max-height: 80%;
}

.genai-loader-state-loading {
}

.genai-loader-state-none {
   display: none;
}
.genai-loader-gradient-element{
    flex-grow: 1;
    -unity-background-scale-mode: scale-to-fit;
}