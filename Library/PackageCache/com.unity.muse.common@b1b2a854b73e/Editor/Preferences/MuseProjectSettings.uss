.muse-project-settings {
    margin-right: 1px;
    flex-shrink: 1;
    flex-grow: 1;
}

.muse-project-settings #unity-content-container {
    padding: 1px 8px 12px 12px;
}

.muse-project-settings .unity-base-field__label {
    width: 250px;
    flex-grow: 0;
    flex-shrink: 0;
}

.muse-project-settings__header {
    flex-shrink: 0;
    flex-grow: 0;
    -unity-font-style: bold;
    font-size: 19px;
    margin-bottom: 12px;
    margin-top: 0;
    padding-left: 1px;
    padding-right: 2px;
}

.muse-project-settings__description {
    margin-bottom: 10px;
    padding-left: 3px;
    -unity-font-style: italic;
    flex-shrink: 0;
}

.muse-project-settings__section .unity-toggle__text {
    -unity-font-style: bold;
}

.muse-project-settings__sub-header {
    -unity-font-style: bold;
    margin: 10px 0 5px 0;
    padding-left: 3px;
}

.muse-project-settings__row {
    flex-direction: row;
    align-items: center;
}

.muse-project-settings__row > .unity-text-field {
    flex-shrink: 1;
}

.muse-project-settings__help-box {
    -unity-font-style: bold;
    font-size: 16px;
    margin-bottom: 16px;
}

.muse-project-settings__property-label {
    width: 250px;
    flex-grow: 0;
    flex-shrink: 0;
    padding-left: 3px;
}

.muse-project-settings__full-width-dropdown {
    margin-bottom: 4px;
    padding-left: 3px;
}