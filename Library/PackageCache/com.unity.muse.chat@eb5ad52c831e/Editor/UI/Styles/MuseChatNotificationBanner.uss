#notificationBanner {
    align-self: center;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 8px;
    padding-left: 12px;
    padding-right: 12px;
    margin-bottom: 0;
    max-width: 716px;
    flex-shrink: 0;
    flex-grow: 0;
    width: 100%;
}

.mui-notification-banner-content {
    align-self: center;
    margin: 2px;
    background-color: var(--muse-chat-backgrounds-50);
    border-width: 1px;
    border-color: #cd9f14;
    border-radius: 8px;
    width: 99%;
    padding: 16px;
    flex-shrink: 0;
    flex-direction: row;
}

#notificationBannerTitle {
    position: relative;
    align-self: flex-start;
    -unity-text-align: middle-left;
    -unity-font-style: bold;
    margin-bottom: 8px;
}

#notificationBannerMessage {
    position: relative;
    align-self: flex-start;
    -unity-text-align: middle-left;
    -unity-font-style: normal;
}

#notificationBannerContainer {
    flex-direction: column;
    flex-grow: 1;
    flex-shrink: 1;
}

#notificationBannerDismissButton {
    width: 16px;
    height: 16px;
    margin-top: 0;
    margin-bottom: 4px;
    margin-right: 0;
    background-color: rgba(0, 0, 0, 0);
    border-color: rgba(0, 0, 0, 0);
    align-self: flex-start;
    flex-grow: 0;
    flex-shrink: 0;
}

#notificationBannerActionButton {
    margin-top: 6px;
    flex-grow: 0;
    background-color: rgba(0, 0, 0, 0);
    border-color: rgba(0, 0, 0, 0);
    flex-direction: row;
}

#notificationBannerActionButton:hover {
    background-color: var(--muse-chat-backgrounds-200);
}

#notificationBannerDismissButton:hover {
    background-color: var(--muse-chat-backgrounds-200);
}

.mui-notification-banner-warning-icon {
    margin-right: 4px;
}

.mui-notification-banner-title-content {
    flex-direction: row;
}

.mui-notification-action-area {
    flex-direction: row;
}
