.musingelement__element {
    flex-shrink: 0;
    flex-grow: 1;
}

.musingelement__element-root {
    flex-grow: 1;
    margin-left: 2px;
    margin-top: 2px;
    margin-bottom: 2px;
    margin-right: 8px;
}

.mui-musing-root {
    flex-grow: 1;
    height: 50px;
    width: 230px;
    background-color: var(--muse-chat-base-200);
    border-radius: 6px;
    justify-content: center;
    align-items: center;
    align-self: center;
    flex-direction: column;
    margin-left: 8px;
    margin-bottom: 8px;
    padding-right: 6px;
    padding-left: 6px;
}

.mui-musing-text {
    margin-left: 4px;
    margin-right: 4px;
    margin-top: 2px;
    -unity-font-style: bold;
    align-self: flex-start;
}

.mui-musing-progressbar {
    height: 8px;
    flex-grow: 0;
    border-radius: 6px;
    align-self: stretch;
    margin-top: 0;
}

.mui-musing-progressbar .unity-progress-bar__container {
    height: 8px;
    min-height: 8px;
    max-height: 8px;
}

.mui-musing-progressbar .unity-progress-bar__background {
    background-color: var(--muse-chat-backgrounds-100);
    border-radius: 4px;
    border-width: 1px;
    border-color: var(--muse-chat-backgrounds-50);
}

.mui-musing-progressbar .unity-progress-bar__progress {
    background-color: var(--muse-chat-color-pink);
    border-radius: 2px;
    border-width: 0;
    margin: 0;
    background-image: url('project://database/Packages/com.unity.muse.chat/Editor/UI/Assets/icons/Slider.png');
    background-position-x: left 0;
    background-repeat: repeat;
    background-size: cover;
}
