.unity-text-element {
    /* define default font size to ensure it's consistent across Unity versions */
    font-size: 12px;
}

.mui-action-cursor {
    cursor: link;
}

.-muse-chat-button {
    cursor: arrow;
}

.mui-action-button {
    flex-direction: row;
    min-height: 16px;
}

.mui-action-button-image {
    width: 16px;
    height: 16px;
    --unity-image-size: scale-to-fit;
    flex-shrink: 0;
}

.mui-action-button-label {

}

.mui-chat-label {
    -unity-text-align: middle-left;
    padding-left: 0;
    padding-right: 0;
}

.mui-chat-foldout {
    cursor: link;
}

.mui-chat-foldout .unity-foldout__text {
    color: var(--muse-chat-header-text-strong);
    -unity-font-style: bold;
    cursor: link;
    -unity-text-align: middle-left;
}

.mui-chat-foldout .unity-foldout__content {
    margin-left: 0;
}

.mui-chat-foldout .unity-foldout__toggle {
    min-height: 24px;
}

.mui-popup-shadow {
    position: absolute;
    top: -2px;
    bottom: -2px;
    left: -2px;
    right: -2px;

    background-color: rgba(0, 0, 0, .15);
    border-radius: 4px;
}
