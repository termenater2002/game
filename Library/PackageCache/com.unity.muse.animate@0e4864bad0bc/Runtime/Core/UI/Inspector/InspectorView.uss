.deeppose-inspector {
    flex-grow: 0;
    flex-direction: column;
    align-self: flex-start;
    align-content: flex-start;
    width: 100%;
    height: auto;
    margin: 0;
    border-width: 0;
    border-radius: 0;
    padding: 0;
}

.deeppose-inspector .appui-text {
    /*
    align-self: center;
    -unity-text-align: middle-left;
    flex-grow: 1;*/
}

.deeppose-inspector .appui-heading {
    padding: 0 0 4px;
    -unity-text-align: lower-center;
    -unity-font-style: bold;
    font-size: 12px;
}

.deeppose-inspector .appui-inputlabel {
    flex-grow: 1;
    padding-bottom: 0px;
    padding-top: 6px;
    margin-top: 0;
    margin-bottom: 0;
}

.deeppose-inspector .appui-inputlabel__label
{
    -unity-text-align: middle-left;
    align-self: flex-start;
    flex-grow: 1;
}

.deeppose-inspector .appui-toggle__label {
    margin-left: 0;
}


.deeppose-inspector .appui-slider {
    padding-left: 8px;
    padding-right: 8px;
    flex-grow: 1;
    width: auto;
}

.deeppose-inspector .appui-slider__control-container {
    padding-left: 8px;
    padding-right: 8px;
    flex-grow: 1;
}

.deeppose-inspector-row 
{
    flex-direction: row;
    flex-grow: 1;
}

.deeppose-inspector-row-value {
    flex-grow: 1;
    width: auto;
    height: auto;
}

.deeppose-inspector-row-spacer {
    flex-grow: 0;
    width: 5px;
    height: auto;
}
