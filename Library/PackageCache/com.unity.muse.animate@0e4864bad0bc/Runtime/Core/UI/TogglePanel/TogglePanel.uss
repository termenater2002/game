.deeppose-toggle-panel {
    flex-grow: 1;
    flex-direction: row;
    align-content: flex-start;
    justify-content: flex-start;
    border-radius: 0;
}

.deeppose-toggle-panel-background {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}

.deeppose-toggle-panel-pages {
    flex-grow: 1;
    height: auto;
    overflow: hidden;
    align-items: center;
    align-content: flex-start;
    justify-content: flex-start;
    background-color: var(--appui-backgrounds-200);
}

.deeppose-toggle-panel-pages .subscription-callout-container {
    margin-top: var(--appui-spacing-400);
    margin-bottom: 0;
}

.deeppose-toggle-panel-pages--quiet {
    flex-grow: 1;
    flex-shrink: 1;
    height: auto;
    overflow: hidden;
    align-content: flex-start;
    justify-content: flex-start;
    padding: 0;
    margin-right: 12px;
    margin-bottom: 12px;
    background-color: rgba(1,1,1,0);
}

.deeppose-toggle-panel-pages-header{
    height: 36px;
    min-height: 36px;
    padding: 8px;
    width: 100%;
    flex-direction: row;
    overflow: hidden;
    align-items: center;
    align-content: flex-start;
    justify-content: flex-start;
}

.deeppose-toggle-panel-pages-header--quiet{
    height: 32px;
    min-height: 32px;
    padding: 4px;
    width: 100%;
    background-color: var(--appui-backgrounds-100);
    flex-direction: row;
    overflow: hidden;
    align-items: stretch;
    align-content: flex-start;
    justify-content: flex-start;
}

.deeppose-toggle-panel-page {
    position: relative;
    height: 100%;
    width: 100%;
    overflow: scroll;
    align-content: flex-start;
    justify-content: flex-start;
}

.deeppose-toggle-panel-page--quiet {
    position: relative;
    height: 100%;
    width: 100%;
    overflow: scroll;
    padding: 8px;
    /*TODO: this is causing an assert in UITK. Need to come up with a repro so we can submit a bug report.*/
    /*border-radius: 6px;*/
    align-content: flex-start;
    justify-content: flex-start;
    background-color: var(--appui-backgrounds-50);
}

.deeppose-toggle-panel-menu {
    flex-grow: 0;
    padding-right: var(--appui-spacing-150);
    padding-top: var(--appui-spacing-150);
    padding-bottom: var(--appui-spacing-150);
    padding-left: var(--appui-spacing-200);
    background-color: var(--appui-backgrounds-200);
}

.deeppose-toggle-panel-menu-button
{
    border-width: 0;
    width: 22px;
    height: 22px;
    margin-top: 1px;
    margin-left: 1px;
    margin-right: 1px;
    margin-bottom: 6px;
    background-color: rgba(0,0,0,0);
}

.deeppose-toggle-panel-menu-button:hover
{
    border-width: 0;
    background-color: var(--appui-base-200);
}

.deeppose-toggle-panel-menu-button:active
{
    border-width: 0;
    background-color: var(--appui-alias-actions-background-color-selected);
}

.deeppose-toggle-panel-menu-button--active
{
    background-color: var(--appui-alias-actions-background-color-selected);
}

.deeppose-toggle-panel-menu-button--quiet--active
{
    /*background-color: var(--appui-backgrounds-200);*/
}

.deeppose-toggle-panel-menu-button--quiet--single
{
    border-radius: 3px 0 0 3px;
}

.deeppose-toggle-panel-menu-button--quiet--first
{
    border-radius: 3px 0 0 0;
}

.deeppose-toggle-panel-menu-button--quiet--middle
{
    border-radius: 0;
}

.deeppose-toggle-panel-menu-button--quiet--last
{
    border-radius: 0 0 0 3px;
}