.deeppose-scene-view {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    flex-direction: row;
}

.deeppose-scene-view-overlays {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    align-items: center;
}

.deeppose-scene-view-left {
    align-items: flex-start;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.deeppose-scene-view-left-top
{
    align-items: stretch;
    flex-direction: row-reverse;
    padding: var(--appui-spacing-100);
    width: 100%;
    height: auto;

}

.deeppose-scene-view-title
{
    position: relative;
    flex-grow: 0;
    flex-shrink: 1;
    min-width: 64px;
    width: 64px;
    min-height: 30px;
    flex-wrap: nowrap;
}

.deeppose-scene-view-title-label
{
    font-size: 12px;
    -unity-font-style: normal;
    padding: var(--appui-spacing-50);
    margin-left: var(--appui-spacing-150);
    padding-left: var(--appui-spacing-150);
    padding-right: var(--appui-spacing-150);
    -unity-text-align: middle-left;
    background-color: rgba(0,0,0,0.1);
    flex-wrap: nowrap;
    overflow: visible;
}

.deeppose-scene-view-left-bottom {
    flex-grow: 1;
    height: 100%;
    width: auto;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: row;
}

.deeppose-scene-view-right {
    align-items: flex-end;
    flex-shrink: 0;
    width: auto;
}

.deeppose-scene-view-toolbars {
    flex-grow: 0;
    flex-shrink: 0;
    padding: var(--appui-spacing-100);
    align-items: flex-start;
    flex-wrap: nowrap;
    width: auto;
    height: 100%;
}

.deeppose-scene-view-play-area {
    flex-grow: 0;
    flex-shrink: 0;
    position: absolute;
    left:0;
    right:0;
    top: 0;
    bottom: 0;
}
