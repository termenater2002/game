.deeppose-sequence {
    flex-grow: 1;
    flex-direction: column;
    align-items: flex-start;
    flex-wrap: nowrap;
}

.deeppose-sequence-menu {
    height: auto;
    flex-direction: row;
    flex-grow: 0;
    flex-shrink: 0;
    width: 100%;
    background-color: var(--appui-color-gray-200);
    padding: 2px;
}

.deeppose-sequence-top {
    flex-direction: row;
    width: 100%;
    justify-content: flex-start;
}

.deeppose-sequence-item-duration-slider {
    margin-left: var(--appui-sizing-200);
    margin-right: var(--appui-sizing-200);
    flex-grow: 1;
    width: 0; /* fix for slider going outside of its inspector */
}

.deeppose-slider-no-inline-value
{
    width: 0;
    max-width: 0;
}

.deeppose-sequence-toolbar-top {
    flex-direction: row;
    height: auto;
}

.deeppose-sequence-action-group {
    flex-grow: 0;
    align-self: center;
}

.deeppose-sequence-drag-layer {
    flex: auto;
    align-self: center;
    justify-content: flex-start;
    background-color: var(--appui-backgrounds-200);
    padding-left: var(--appui-spacing-150);
    padding-right: var(--appui-spacing-150);
    padding-bottom: var(--appui-spacing-150);
    margin: 0;
}

.deeppose-sequence-scrollview {
    flex: auto;
}
/*
.deeppose-sequence-scrollview .unity-scroll-view__horizontal_scroller {
    margin-top: 8px;
}
*/
.deeppose-sequence-scrollview .unity-scroller--horizontal {
    margin-top: 6px;
}

.deeppose-sequence-add-key-button {
    flex: none;
    align-self: center;
    height: 100px;
    width: 100px;
    background-color: #161616;
    margin-right: var(--appui-spacing-50);
    flex-direction: row;
    align-items: center;
    transition: background-color 0.2s ease-in-out;
}

.deeppose-sequence-add-key-button:hover {
    background-color: var(--appui-backgrounds-100);
}

.deeppose-sequence-add-key-button-icon {
    flex: auto;
    align-self: center;
}

.deeppose-sequence-item
{
    border-width: var(--appui-sizing-50);
    border-color: #2e2e2e;
    background-color: var(--appui-color-gray-100);
    cursor: var(--appui-alias-control-cursor-pointer);
}

.deeppose-sequence-item-editing{
    border-color: var(--appui-accent-100);
    background-color: var(--appui-color-gray-500);
}

.deeppose-sequence-item-highlighted {
    border-color: var(--appui-color-gray-800);
    background-color: var(--appui-color-gray-400);
}

.deeppose-sequence-transition {
    flex: none;
    align-self: center;
    height: var(--appui-sizing-450);
    width: var(--appui-sizing-450);
    border-radius: 50%;
    margin-left: var(--appui-spacing-25);
    margin-right: var(--appui-spacing-50);
    flex-direction: row;
    align-items: center;
}

.deeppose-sequence-transition-icon {
    flex: auto;
    align-self: center;
}

.deeppose-sequence-key {
    flex: none;
    align-self: center;
    height: 100px;
    width: 100px;
    border-radius: var(--appui-sizing-100);
    overflow: hidden;
    margin-right: var(--appui-spacing-100);
    flex-direction: row;
    align-items: flex-end;
}

.deeppose-sequence-key-delete-button {
    flex: none;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    align-self: flex-end;
}

.deeppose-sequence-item-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(255, 255, 255, 0);
    transition: background-color 0.2s ease-in-out;
}

.deeppose-sequence-item:hover .deeppose-sequence-item-overlay {
    background-color: rgba(255, 255, 255, 0.05);
}

.deeppose-sequence-item-thumbnail {
    width: 100%;
    height: 100%;
    border-radius: 5px;
    flex: none;
}

.deeppose-sequence-item-type-icon {
    position: absolute;
    left:2px;
    top:2px;
    width: 24px;
    height: 24px;
    flex: none;
}
