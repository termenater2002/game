.deeppose-timeline {
    flex-direction: column;
    flex-grow: 0;
    flex-shrink: 0;
    border-color: var(--appui-backgrounds-50);
    border-top-width: 1px;
}

.deeppose-timeline-top {
    flex-direction: row;
    flex-grow: 0;
    flex-shrink: 0;
    background-color: var(--appui-backgrounds-200);
    padding: 0;
}

.deeppose-timeline-action-group
{
    flex-grow: 0;
    align-self: center;
}
