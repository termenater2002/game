@import "./Icons/Icons.uss";

/* Main section of Muse Animate UI */

.deeppose-main {
    width: 100%;
    height: 100%;
    flex-grow: 0;
    min-width: 600px;
    min-height: 200px;
    overflow: scroll;
    flex-direction: row;
    align-items: stretch;
}

/* Disabling backgrounds on quiet disabled action buttons */

.deeppose-main .appui-actionbutton--quiet.appui-actionbutton:disabled {
    border-color: var(--appui-color-transparent-black-0);
    background-color: var(--appui-alias-actions-quiet-background-color-disabled);
}

.deeppose-main .appui-actionbutton--quiet.appui-actionbutton:hover {
    border-color: var(--appui-color-transparent-black-0);
}

/* Important/Primary Buttons */

.deeppose-main .deeppose-important-button {
    background-color: var(--appui-accent-100);
    border-color: rgba(0, 0, 0, 0.5);
    border-width: 1px;
}

.deeppose-main .deeppose-important-button:hover {
    background-color: var(--appui-accent-200);
    border-color: rgba(0, 0, 0, 0.25);
    border-width: 1px;
}

.deeppose-main .deeppose-important-button:active {
    background-color: var(--appui-accent-50);
    border-color: rgba(255, 255, 255, 0.1);
    border-width: 1px;
}

.deeppose-main .deeppose-important-button:disabled {
    background-color: var(--appui-backgrounds-300);
}

.deeppose-main .deeppose-important-button .appui-button__title {
    color: rgb(230, 255, 251);
}

.deeppose-main .deeppose-important-button .appui-button__title:hover {
    color: rgb(255, 255, 255);
}

.deeppose-main .deeppose-important-button .appui-button__title:disabled {
    color: rgba(255, 239, 239, 0.34);
}

.deeppose-main .deeppose-important-button .appui-button__title:active {
    color: rgb(128, 206, 215);
}

/* Main Left and Right Sections */

.deeppose-main-left-section {
    height: 100%;
    flex-grow: 0;
    flex-direction: column;
}

.deeppose-main-right-section {
    height: 100%;
    width: 100%;
    flex-grow: 1;
    flex-direction: column;
}

/* Top Bar (Muse Bar) */

.deeppose-top-bar {
    flex-grow: 1;
    flex-shrink: 0;
    padding: 8px;
    flex-direction: row;
    align-items: center;
    flex-wrap: nowrap;
    height: 36px;
    background-color: var(--appui-backgrounds-200);
}

.deeppose-account-dropdown {
    margin-left: auto;
    margin-right: 0;
}

/* Main Separators */

.deeppose-main-horizontal-separator {
    flex-grow: 0;
    flex-shrink: 0;
    padding: 0;
    height: 1px;
    background-color: var(--appui-backgrounds-50);
}

.deeppose-main-vertical-separator {
    flex-grow: 0;
    flex-shrink: 0;
    padding: 0;
    width: 1px;
    background-color: var(--appui-backgrounds-50);
}

/* Library Area */
.deeppose-library {
    position: absolute;
    width: 100%;
    height: 100%;
    flex-grow: 0;
    flex-direction: column;
}

/* Scene (Viewport) */

.deeppose-editor-area {
    position: absolute;
    width: 100%;
    height: 100%;
    flex-grow: 1;
    flex-direction: column;
}

.deeppose-scene {
    width: 100%;
    height: 100%;
    flex-direction: column;
}

.deeppose-scene-top {
    width: 100%;
    flex-grow: 0;
    flex-shrink: 0;
    padding: var(--appui-spacing-50);
    flex-direction: row;
    background-color: rgba(0, 0, 0, 0.8);
}

.deeppose-scene-center {
    width: 100%;
    height: 100%;
    flex-direction: column;
}

/* Menu Styling */

.deeppose-drop-menu {
    height: 100%;
    width: 100%;
    padding: 4px;
    background-color: var(--appui-background-inspector);
}

.appui-menuitem__shortcut {
    margin-left: 10px;
    -unity-font-style: bold;
}

.appui-menuitem__shortcut {
    position: absolute;
    right: 0px;
    top: 0px;
}

/* Toolbars Styling */

.appui-actiongroup {
    flex-grow: 0;
}

.deeppose-toolbar {
    flex-grow: 0;
    flex-shrink: 1;
    flex-direction: row;
    margin-right: 3px;
    border-radius: var(--appui-border-radius-lg);
    padding: 3px;
    background-color: rgba(0, 0, 0, 0.4);
    align-items: flex-start;
    align-content: flex-start;
    align-self: flex-start;
    justify-content: flex-start;
    flex-wrap: nowrap;
}

.deeppose-toolbar .appui-actiongroup {
    flex-grow: 0;
    flex-shrink: 1;
    flex-direction: row;
    margin-right: 2px;
    padding: 0;
    border-color: rgba(38, 38, 38, 0.44);
    border-width: 1px;
    background-color: rgba(0, 0, 0, 1);
    border-radius: 4px;
    align-items: flex-start;
    align-content: flex-start;
    align-self: flex-start;
    justify-content: flex-start;
    flex-wrap: nowrap;
}

.deeppose-toolbar-button {
    width: 24px;
    height: 20px;
    border-radius: var(--appui-alias-control-border-radius);
    border-top-left-radius: var(--appui-alias-control-border-radius);
    border-top-right-radius: var(--appui-alias-control-border-radius);
    border-bottom-left-radius: var(--appui-alias-control-border-radius);
    border-bottom-right-radius: var(--appui-alias-control-border-radius);
    margin: 0;
    margin-top: 0;
    margin-bottom: 0;
    margin-right: 0;
    margin-left: 0;
}

.deeppose-toolbar-section {
    margin-right: 1px;
}

.deeppose-toolbar-section.unity-last-child {
    margin-right: 0;
}

.deeppose-toolbar .appui-actionbutton.appui-actiongroup__item {
    width: 24px;
    height: 20px;
    border-width: 0;
    border-radius: var(--appui-alias-control-border-radius);
    border-top-left-radius: var(--appui-alias-control-border-radius);
    border-top-right-radius: var(--appui-alias-control-border-radius);
    border-bottom-left-radius: var(--appui-alias-control-border-radius);
    border-bottom-right-radius: var(--appui-alias-control-border-radius);
}

.deeppose-toolbar .appui-actionbutton.appui-actiongroup__item .appui-actionbutton__icon {
    width: 16px;
    height: 16px;
}

.deeppose-toolbar .appui-actionbutton.appui-actiongroup__item.appui-actiongroup__inbetween-item {

    border-top-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    margin-right: 1px;
}

.deeppose-toolbar .appui-actionbutton.appui-actiongroup__item.unity-last-child {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    margin-right: 0;
}

.deeppose-toolbar .appui-actionbutton.appui-actiongroup__item.unity-first-child {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    margin-right: 1px;
}

.deeppose-toolbar .appui-actionbutton.appui-actiongroup__item.unity-first-child.unity-last-child {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-radius: 0;
    margin-left: 0;
    margin-right: 0;
}

.appui--ltr .deeppose-toolbar .appui-actionbutton.appui-actiongroup__item.unity-first-child.unity-last-child {
    border-top-left-radius: var(--appui-alias-control-border-radius);
    border-bottom-left-radius: var(--appui-alias-control-border-radius);
    border-top-right-radius: var(--appui-alias-control-border-radius);
    border-bottom-right-radius: var(--appui-alias-control-border-radius);
    border-radius: var(--appui-alias-control-border-radius);
    margin-right: 0;
    margin-left: 0;
    border-width: 0;
}
